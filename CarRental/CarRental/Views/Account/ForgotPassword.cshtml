@model WorkWithData.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Забыли пароль?";
}

<main>
    <div class="cover">
        <div class="Login">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div>
                    @Html.ValidationSummary()
                    <p>
                        <label>Введите адрес электронной почты.</label><br />
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </p>
                    <p>
                        <input type="submit" class="btn btn-default" value="Отправка ссылки по электронной почте" />
                    </p>
                </div>
            }

        </div>
    </div>
</main>